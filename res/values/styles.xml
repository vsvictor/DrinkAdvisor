<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Black.NoTitleBar" />

    <style name="MenuItemStyle">
        <item name="android:textColor">#00f6ff</item>
        <item name="android:textScaleX">1.1</item>
        <item name="android:textSize">6pt</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:background">@drawable/button_blue_normal</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonDarkBlue">
        <item name="android:background">@drawable/button_blue_dark</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonLightBlue">
        <item name="android:background">@drawable/button_blue_light</item>
        <item name="android:textColor">#FF003168</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ButtonThinFrameDarkBlue">
        <item name="android:background">@drawable/button_thin_frame_blue_dark</item>
        <item name="android:textColor">@color/button_frame_blue_dark</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ButtonBoldFrameLightBlue">
        <item name="android:background">@drawable/button_frame_blue</item>
        <item name="android:textColor">@color/button_login</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonThinFrameLightBlue">
        <item name="android:background">@drawable/button_login</item>
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonInviteFriend">
        <item name="android:background">@drawable/button_invite_friend</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Switch">
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:switchTextAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:thumbTextPadding">18dip</item>
        <item name="android:switchMinWidth">51dip</item>
        <item name="android:switchPadding">0dip</item>
        <item name="android:textOn"> </item>
        <item name="android:textOff"> </item>
    </style>

</resources>