<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/img_background_left" >

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_menu" />

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/img_logo_home" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/home_top_padding" >

            <Button
                android:id="@+id/btn_bars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home"
                android:drawablePadding="@dimen/home_button_drawing_padding"
                android:drawableTop="@drawable/icon_home_bars"
                android:paddingTop="@dimen/home_button_top_padding"
                android:text="@string/home_button_bars"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_drinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home"
                android:drawablePadding="@dimen/home_button_drawing_padding"
                android:drawableTop="@drawable/icon_home_drinks"
                android:paddingTop="@dimen/home_button_top_padding"
                android:text="@string/home_button_drinks"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_cocktails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home"
                android:drawablePadding="@dimen/home_button_drawing_padding"
                android:drawableTop="@drawable/icon_home_cocktails"
                android:paddingTop="@dimen/home_button_top_padding"
                android:text="@string/home_button_cocktails"
                android:textColor="#FFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <Button
                android:id="@+id/btn_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home"
                android:drawablePadding="@dimen/home_button_drawing_padding"
                android:drawableTop="@drawable/icon_home_reviews"
                android:paddingTop="@dimen/home_button_top_padding"
                android:text="@string/home_button_reviews"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_home"
                    android:drawablePadding="@dimen/home_button_drawing_padding"
                    android:drawableTop="@drawable/icon_home_friends"
                    android:paddingTop="@dimen/home_button_top_padding"
                    android:text="@string/home_button_friends"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/btn_friends"
                    android:layout_alignTop="@id/btn_friends"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/img_home_label"
                    android:gravity="center"
                    android:text="10"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FF00487A"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btn_meetings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_home"
                    android:drawablePadding="@dimen/home_button_drawing_padding"
                    android:drawableTop="@drawable/icon_home_meetings"
                    android:paddingTop="@dimen/home_button_top_padding"
                    android:text="@string/home_button_meetings"
                    android:textColor="#FFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_meetings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/btn_meetings"
                    android:layout_alignTop="@id/btn_meetings"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/img_home_label"
                    android:gravity="center"
                    android:text="10"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FF00487A"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/home_bottom_padding" >

            <Button
                android:id="@+id/btn_favorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home"
                android:drawablePadding="@dimen/home_button_drawing_padding"
                android:drawableTop="@drawable/icon_home_favorites"
                android:paddingTop="@dimen/home_button_top_padding"
                android:text="@string/home_button_favorites"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home"
                android:drawablePadding="@dimen/home_button_drawing_padding"
                android:drawableTop="@drawable/icon_home_activity"
                android:paddingTop="@dimen/home_button_top_padding"
                android:text="@string/home_button_activity"
                android:textColor="#FFF"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_home"
                android:drawablePadding="@dimen/home_button_drawing_padding"
                android:drawableTop="@drawable/icon_home_profile"
                android:paddingTop="@dimen/home_button_top_padding"
                android:text="@string/home_button_profile"
                android:textColor="#FFF"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>