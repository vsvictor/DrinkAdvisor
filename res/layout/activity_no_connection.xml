<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/bg_offline" >

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:weightSum="1" >

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.40"
            android:src="@drawable/img_logo_conn" />

        <TextView
            android:id="@+id/tv_noconn_announce"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.30"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:text="@string/no_connect_announce"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textScaleX="1.1"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="top|center"
            android:paddingTop="10dp"
            android:weightSum="1" >

            <TextView
                android:id="@+id/tv_noconn_off"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_weight="0.8"
                android:background="@drawable/btn_login_pressed"
                android:gravity="center"
                android:text="@string/stay_offline"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:weightSum="1" >

            <TextView
                android:id="@+id/tv_noconn_on"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_weight="0.8"
                android:background="@drawable/btn_light_blue_normal"
                android:gravity="center"
                android:text="@string/stay_online"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>