<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/friends_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <com.drink.imageloader.WebImageView2
            android:id="@+id/wiv_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sample_friend_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#005cb1"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="23dp" >

            <TextView
                android:id="@+id/tv_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_frame_red"
                android:gravity="center"
                android:text="@string/_will_not_can_"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_green"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_frame_green"
                android:gravity="center"
                android:text="@string/_will_go_"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/img_frame_gray"
                android:gravity="center"
                android:text="@string/_dont_know_"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FFCFCFCF"
        android:orientation="vertical" />

</LinearLayout>