<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_login"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:src="@drawable/img_login_line" />

        <TextView
            android:id="@+id/tvNoUserFollowed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enter_over"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF00E9FF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:src="@drawable/img_login_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login_socials_bottom"
        android:layout_marginTop="@dimen/login_socials_top"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login_facebook" />

        <ImageButton
            android:id="@+id/btn_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login_twitter" />

        <ImageButton
            android:id="@+id/btn_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login_google" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="215dp"
        android:layout_height="32dp"
        android:background="@drawable/button_login"
        android:text="@string/enter_over_DA"
        android:textColor="@color/button_login" />

    <Button
        android:id="@+id/btn_registration"
        android:layout_width="215dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_login"
        android:text="@string/registration_on_DA"
        android:textColor="@color/button_login" />

    <TextView
        android:id="@+id/txt_skip_registration"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingBottom="@dimen/login_skip_registration_bottom"
        android:paddingTop="@dimen/login_skip_registration_top"
        android:text="@string/skip_registration"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/button_login"
        android:textSize="12sp" />

</LinearLayout>