<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="250dp"
        android:layout_height="165dp"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_btn_dont_know"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_dont_know"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/button_menu"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9900F0FF"
                android:orientation="vertical"
                android:visibility="visible" >

            </LinearLayout>

            <TextView
                android:id="@+id/tv_btn_dont_go"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_will_not_can"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/button_menu"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#9900F0FF"
            android:orientation="horizontal"
            android:visibility="visible" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_btn_will_go"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_will_go"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/button_menu"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#9900F0FF"
                android:orientation="vertical"
                android:visibility="visible" >

            </LinearLayout>

            <TextView
                android:id="@+id/tv_btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/_cancel"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/button_menu"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_main_info"
        android:layout_width="match_parent"
        android:layout_height="165dp" >

        <com.drink.imageloader.WebImageView2
            android:id="@+id/picture"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80003D72"
            android:orientation="vertical"
            android:visibility="gone" >

        </LinearLayout>

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:gravity="left|center_vertical"
            android:text="@string/_new"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Отмечаем мой ДР!"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="сегодня, 18:30"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical" >

                <com.drink.imageloader.WebImageView2
                    android:id="@+id/avatar"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp" >
                </com.drink.imageloader.WebImageView2>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_friend_name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/tv_invited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_invited"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_invited_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 208"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_separator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_will_go"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_will_go_"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_light"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_will_go_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 81"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/blue_light"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>