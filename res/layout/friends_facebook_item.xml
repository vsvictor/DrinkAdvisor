<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp" >

    <com.drink.imageloader.WebImageView2
        android:id="@+id/ivFBAvatarSigner"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_weight=".6"
        android:background="#FFF"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/tvFBNameSigner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/ivFBAvatarSigner"
        android:layout_weight=".6"
        android:text="tvName"
        android:textColor="@android:color/black"
        android:textSize="@dimen/data_font_size_normal" />

    <RelativeLayout
        android:id="@+id/rlFBDisableSigner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_weight=".6"
        android:background="@drawable/follow_button_watched"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/ivFBImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_followed"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvFBDisableSigner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/invate"
            android:textColor="@color/white"
            android:textSize="@dimen/data_font_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlFBWatchSigner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_weight=".6"
        android:background="@drawable/follow_button"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/ivFBImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/button_follow"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvFBWatchSigner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/invated"
            android:textColor="@color/white"
            android:textSize="@dimen/data_font_size_normal" />
    </RelativeLayout>
    

</RelativeLayout>
